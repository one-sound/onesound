<%- include('../../layout/head.ejs') %>
    <body>
        <%- include('../../layout/header.ejs') %>
        <main>
            <h2>Your Customized Playlist</h2>
            <section class="playlist">
                <% playList.forEach(song => { %>
                    <li>
                        <img src="<%= song.album_image_url %>">
                        <h3><%= song.trackName %></h3>
                        <h5><%= song.artistName %></h5>
                        <span>Album: <%= song.collectionName %></span>
                        <span>Genre: <%= song.primaryGenreName %></span>
                        <span>Country of Origin: <%= song.country %></span>
                        <video src="<%= song.previewUrl %>"></video>
                    </li>
                <% }); %>
            </section>
        </main>
        <%- include('../../layout/footer.ejs') %>
    </body>

</html>